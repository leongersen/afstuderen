{
  "name": "Hello World!",
  "description": "My first Chrome App.",
  "version": "0.1",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "webview": {
    "partitions": [
      {
        "name": "static",
        "accessible_resources": ["hostResponder/builder.html", "hostResponder/map.js", "markers/*.png"]
      }
    ]
  },
  "permissions": [
    "serial", "fullscreen", "webview", "http://localhost/*"
  ],
  "icons": { "16": "calculator-16.png", "128": "calculator-128.png" }
}
